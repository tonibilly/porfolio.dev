---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import TitleSection from "@/components/TitleSection.astro"

const personalEmail = "tonylozanorequena@gmail.com"
const personalLinkedIn = "https://www.linkedin.com/in/tonylozanorequena/"
---

<Layout
  title="Porfolio de Tony L. Requena - Desarrollador y Programador Web con +20 años de experiencia"
  description="Contrata a Tony L. Requena para crear tu aplicación web. Desarrollador Web y Creador de Contenido. Especializado en crear aplicaciones únicas."
  year="2024"
  email={personalEmail}
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero email={personalEmail} linkedin={personalLinkedIn}>
        <slot name="hero"></slot>
      </Hero>
    </SectionContainer>
    <div class="space-y-24">

      <SectionContainer id="experiencia">
        <TitleSection>
          <Briefcase class="size-8" />
          Experiencia laboral
        </TitleSection>
        <Experience />
      </SectionContainer>



      <SectionContainer id="proyectos">
        <TitleSection>
          <CodeIcon class="size-7" />
          Proyectos
        </TitleSection>
        <Projects />
      </SectionContainer>



      <SectionContainer id="sobre-mi">
        <TitleSection>
          <ProfileCheck class="size-8" />
          Sobre mí
        </TitleSection>
        <AboutMe />
      </SectionContainer>


    </div>
  </main>
</Layout>

<script is:inline>
  //  Sirve para incluir código JavaScript en el archivo Astro.
  // alert("Hola, soy Tony L. Requena. ¡Gracias por visitar mi sitio web!");
  // on click event in .hablamos class, alert with greetings
  document.querySelector(".hablamos").addEventListener("click", () => {
    alert("Hola, soy Tony L. Requena. ¡Gracias por visitar mi sitio web!");
  });
</script>